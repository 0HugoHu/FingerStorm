<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:background="#000000">

	<TextView
		android:layout_height="wrap_content"
		android:text="反馈"
		android:layout_width="wrap_content"
		android:textColor="#F1F1F1"
		android:textSize="30sp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="25dp"
		android:id="@+id/helpTextView1"/>

	<View
		android:layout_height="2dp"
		android:layout_width="match_parent"
		android:layout_below="@id/helpTextView1"
		android:background="#F1F1F1"
		android:id="@+id/returnView1"/>

	<Button
		android:layout_height="wrap_content"
		android:text="返  回"
		android:layout_width="200dp"
		android:layout_centerHorizontal="true"
		android:textSize="20sp"
		android:textColor="#F1F1F1"
		android:background="@drawable/simple_button_states"
		android:layout_alignParentBottom="true"
		android:id="@+id/helpButton1"/>

	<EditText
		android:layout_height="200dp"
		android:ems="10"
		android:layout_width="match_parent"
		android:layout_below="@id/returnView1"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="40dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:hint="点击以输入反馈内容"
		android:textColor="#F1F1F1"
		android:gravity="center"
		android:id="@+id/returnEditText1"
		android:background="@drawable/rounded_edittext_states"/>

	<Button
		android:layout_height="wrap_content"
		android:text="点击发送"
		android:layout_width="200dp"
		android:layout_below="@id/returnEditText1"
		android:layout_centerHorizontal="true"
		android:background="@drawable/simple_button_states"
		android:layout_marginTop="20dp"
		android:textColor="#F1F1F1"
		android:id="@+id/returnButton1"
		android:textSize="20sp"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="该方法通过调用系统E-mail发送信息\n\n反馈会采集一些您的手机的基本数据(SDK号、安卓版本、手机型号、屏幕大小、分辨率）\n此信息不涉及您的隐私，您可以在系统邮件中查看到，并删改(不推荐)"
		android:layout_width="wrap_content"
		android:layout_below="@id/returnButton1"
		android:layout_centerHorizontal="true"
		android:textColor="#B0B0B0"
		android:layout_marginTop="10dp"
		android:gravity="center"
		android:layout_marginLeft="40dp"/>

</RelativeLayout>

