<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:background="#000000">

	<Button
		android:layout_height="wrap_content"
		android:text="返  回"
		android:layout_width="200dp"
		android:layout_centerHorizontal="true"
		android:textSize="20sp"
		android:textColor="#F1F1F1"
		android:background="@drawable/simple_button_states"
		android:layout_alignParentBottom="true"
		android:id="@+id/help0Button1"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="帮助"
		android:layout_width="wrap_content"
		android:textColor="#F1F1F1"
		android:textSize="30sp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="25dp"
		android:id="@+id/helpTextView1"/>

	<Button
		android:layout_height="wrap_content"
		android:text="Q&amp;A"
		android:layout_width="match_parent"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_below="@id/helpTextView1"
		android:layout_marginTop="40dp"
		android:background="@drawable/simple_button_states"
		android:textColor="#F1F1F1"
		android:id="@+id/helpButton1"/>

	<View
		android:layout_height="2dp"
		android:layout_width="match_parent"
		android:layout_below="@id/helpTextView1"
		android:background="#F1F1F1"/>

	<Button
		android:layout_height="wrap_content"
		android:text="第一关"
		android:layout_width="match_parent"
		android:layout_below="@id/helpButton1"
		android:background="@drawable/simple_button_states"
		android:textColor="#F1F1F1"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="20dp"
		android:id="@+id/helpButton2"/>

	<Button
		android:layout_height="wrap_content"
		android:text="第二关"
		android:layout_width="match_parent"
		android:layout_below="@id/helpButton2"
		android:background="@drawable/simple_button_states"
		android:textColor="#F1F1F1"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="20dp"
		android:id="@+id/helpButton3"/>

</RelativeLayout>

